@using BulletJournal.Web.ViewModels.Bullet;
@model TaskViewModel

<div class="bullet @(Model.Task.BulletType.ToString().ToLower()) d-flex">
    <span class="bullet-type">
        <i class="bi bi-dot"></i>
    </span>
    <span class="bullet-signifier @(Model.Task.Signifier.ToString().ToLower())"></span>
    <p class="bullet-description m-0">@Model.Task.Description</p>
</div>