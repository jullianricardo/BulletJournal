@using BulletJournal.Web.ViewModels;
@model JournalViewModel

@if (Model.Journal != null)
{
    <main class="journal d-flex flex-column flex-fill">
        <div class="journal-information jumbotron mb-3 bg-dark text-light border border-secondary rounded shadow-sm">
            <h3 class="journal-name">@Model.Journal.Name</h3>
            <p class="journal-description">@Model.Journal.Description</p>
            <hr />
            <h4 class="journal-year">@Model.Journal.Year</h4>
        </div>

        <div class="spread-container d-flex flex-column flex-fill">

            @if (Model.CurrentSpread != null)
            {
                var spreadViewModel = new SpreadViewModel
                {
                    Spread = Model.CurrentSpread
                };

                <partial name="Journal/_Spread" model="spreadViewModel" />
            }
            else
            {
                <h4 class="text-warning">O seu diário está vazio</h4>
            }

        </div>
    </main>
}
else
{
    <p>
        <h4 class="text-info">Opa, parece que você não possui nenhum diário criado.</h4>
        <a asp-page="/Journal/Journal/Create" class="link-primary">Clique aqui para criar um novo diário</a>
    </p>
}