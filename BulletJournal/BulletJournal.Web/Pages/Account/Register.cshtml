@page
@model BulletJournal.Web.Pages.Account.RegisterModel

<p>
    <h3>User Registration</h3>
</p>
<div class="container border" style="padding:20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="ViewModel.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input asp-for="ViewModel.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ViewModel.ConfirmPassword"></label>
            </div>
            <div class="col-5">
                <input asp-for="ViewModel.ConfirmPassword" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.ConfirmPassword"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
            <div class="col-5"></div>
        </div>
    </form>
</div>
