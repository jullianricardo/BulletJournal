@page
@model BulletJournal.Web.Pages.Journal.Journal.DeleteModel

<form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col-2">
            <label>Selecione o Diário que deseja deletar:</label>
        </div>
        <div class="col-5">
            <select asp-for="ViewModel.SelectedJournalId" asp-items="@Model.ViewModel.UserJournals"></select>
        </div>
        <span class="text-danger" asp-validation-for="ViewModel.SelectedJournalId"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <input type="submit" class="btn btn-danger" value="Deletar" />
        </div>
        <div class="col-5">
            <h6 class="text-danger">
                Atenção, essa operação não poderá ser revertida
            </h6>
        </div>
    </div>
</form>